<h3>Comment</h3>

<form {{action "submit" comment on="submit"}}>
  <div class="form-group">
    <label>Title</label>
    {{input
            class="form-control"
            value=title}}
  </div>

  <div class="form-group">
    <label>Content</label>
    {{textarea
               class="form-control"
               value=content}}
  </div>

  <button type="submit">Create</button>
</form>
