<h3>Comment</h3>

<form >
  <div class="form-group">
    <label>Title</label>
    {{input
            class="form-control"
            value=newComment.title
            required="required" }}
  </div>

  <div class="form-group">
    <label>Content</label>
    {{textarea
               placeholder="Please record progress here..."
               class="form-control"
               value=newComment.content
               required="required" }}
  </div>

  <button {{action 'submit'}}>Create</button>
</form>
